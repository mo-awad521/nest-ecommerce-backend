{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/modules",

  "assets": [
    {
      "include": "**/*.hbs",
      "outDir": "dist"
    },
    {
      "include": "emails/**/*",
      "outDir": "dist"
    },
    {
      "include": "**/templates/*.html",
      "outDir": "dist"
    }
  ],

  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true
  }
}
