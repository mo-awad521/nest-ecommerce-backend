{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/modules",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.hbs",
        "outDir": "dist"
      },
      {
        "include": "emails/**/*",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  }
}
